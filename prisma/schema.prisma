}

model Comment {
  CommentID   Int      @id
  BusinessID  Int
  LocationID  Int
  UserID      Int
  CommentText String
  DateCreated DateTime @db.Date
}

model Location {
  LocationID Int    @id
  BusinessID Int
  Location   String
  Name       String
}

model User {
  UserID      Int    @id
  FirstName   String
  LastName    String
  Email       String
  Password    String
  AccountType String @default(dbgenerated("USER"))
  ProfilePic  Bytes?
}

